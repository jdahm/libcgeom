#!/usr/bin/env bash

cf=config.mk
echo_cf() { echo "$1 = $2" >> $cf; }

usage() {
    echo " libcgeom configuration script"
    echo " USAGE: $0 [options]"
    echo " Available options:"
    echo "   -noparallel : disable compiling parallel programs and tests"
    echo "   -fast       : disable debugging mode and turn on compiler optimizations"
}

parallel=true
fast=false

while [[ $1 ]]; do
    case $1 in
        -fast)
            fast=true; shift;;
        -noparallel)
            parallel=false; shift;;
        *)
            usage; exit 1;;
    esac
done

cxx=${CXX:-g++}
cxxflags="$CXXFLAGS -std=c++11"
cppflags=$CPPFLAGS
ldflags=$LDFLAGS
mpicxx=${MPICXX:-mpic++}

if [[ $cxx == *"g++"* ]]; then
    cppflags+=" -Wall -Wextra"
elif [[ $cxx == *"clang++"* ]]; then
    cppflags+=" -Weverything"
fi

if [ $fast = "true" ]; then
    cxxflags+=" -O3 -march=native"
else
    cxxflags+=" -g -O1"
fi

rm -f $cf
echo_cf CXX "$cxx"
echo_cf CXXFLAGS "$cxxflags"
echo_cf CPPFLAGS "$cppflags"
echo_cf LDFLAGS "$ldflags"
if [ $parallel = "true" ]; then
    echo_cf MPICXX "$mpicxx"
fi
